{
  "name": "dbAdmin",
  "lowCaseName": "dbadmin",
  "description": "Database Tables Administration for MODX",
  "author": "Sergei Shlokov, Thomas Jakobi",
  "version": "1.3.0",
  "package": {
    "menus": [
      {
        "text": "dbadmin.menu",
        "description": "dbadmin.menu_desc",
        "action": "home",
        "parent": "components"
      }
    ],
    "systemSettings": [
      {
        "key": "debug",
        "type": "combo-boolean",
        "area": "system",
        "value": "0"
      }
    ]
  },
  "database": {
    "tables": [
      "dbAdminTable"
    ]
  },
  "dependencies": [
    {
      "name": "php",
      "version": ">=7.4"
    },
    {
      "name": "modx",
      "version": ">=2.8"
    }
  ],
  "build": {
    "readme": "docs/readme.md",
    "license": "docs/license.md",
    "changelog": "docs/changelog.md",
    "options": {
      "empty_folders": {
        "{package_path}assets/components/dbadmin/export": "*"
      }
    },
    "setupOptions": {
      "source": "setup.options.php"
    },
    "resolver": {
      "after": [
        "resolve.synctables.php",
        "resolve.inittables.php",
        "resolve.settables.php",
        "resolve.permissions.php",
        "resolve.treehillstudio.php"
      ]
    }
  }
}
